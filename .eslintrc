{
  "extends": "airbnb",

  "env": {
    "browser": true,
    "node": true
  },

  "rules": {
    // Mine
    "max-len": [0],
    "no-console": [0],
    "no-else-return": [0],
    "no-underscore-dangle": 0,
    "no-unused-vars": [2, {"vars": "local", "args": "after-used", "varsIgnorePattern": "^_$"}],
    "object-shorthand": [0],
    "prefer-const": [0],
    "space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],

    // TODO
    "func-names": [0],
    "no-param-reassign": [2, { "props": false }],
    "prefer-arrow-callback": [0],
  }
}
